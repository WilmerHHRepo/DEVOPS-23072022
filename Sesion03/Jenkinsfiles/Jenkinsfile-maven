    pipeline {
    
        agent none
    
        stages {

            stage('Build') {
                agent {
                    docker { image 'maven:3.6.3-openjdk-11-slim' }
                }
                

                steps {

                    git credentialsId: 'github',
                        url: 'https://github.com/aldo2510/galaxy-jenkins-lab-maven.git',
                        branch: 'main'

                    sh 'mvn -B verify'
                }

                post{
                    success {
                        archiveArtifacts artifacts: 'target/*.jar', fingerprint: true, onlyIfSuccessful: true
                    }
                }
            }
        }
    }
